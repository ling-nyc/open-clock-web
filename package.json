{
  "name": "open-clock-web",
  "version": "0.1.0",
  "description": "Open Clock Standard renderer for the web",
  "main": "index.js",
  "author": "mike castleman",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production rollup --config",
    "dev": "NODE_ENV=development rollup --config --watch --watch.buildDelay 2",
    "lint": "eslint src && tsc",
    "gen-schema": "jtd-codegen schemas/ClockWrapper.jtd.json --typescript-out src/open-clock"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.9",
    "@js-joda/core": "^3.2.0",
    "@js-joda/locale_en-us": "^3.2.2",
    "ajv": "^7.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-transform-react-jsx": "^7.12.17",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "@types/css-font-loading-module": "^0.0.4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "csstype": "^3.0.7",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.7",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "rollup": "^2.40.0",
    "rollup-plugin-emit-ejs": "^3.1.0",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "src/**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "browserslist": [
    "cover 95% in US",
    "not IE 11",
    "not dead",
    "firefox ESR",
    "not android < 5"
  ]
}
