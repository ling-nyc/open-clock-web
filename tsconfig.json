{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2019", "DOM"],
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "jest.setup.ts"]
}
